<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow>

            <TextView
                android:id="@+id/blank_column"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/yesterday"
                android:text="@string/yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
                </TextView>

            <TextView
                android:id="@+id/today"
                android:text="@string/today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tomorrow"
                android:text="@string/tomorrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/high"
                android:text="@string/high"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="20dp">
                </TextView>

            <TextView
                android:id="@+id/high_yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/high_today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/high_tomorrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/low"
                android:text="@string/low"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="20dp">
            </TextView>

            <TextView
                android:id="@+id/low_yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/low_today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/low_tomorrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/description"
                android:text="@string/description"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="20dp">
            </TextView>

            <TextView
                android:id="@+id/description_yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/description_today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/description_tomorrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center">
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>
